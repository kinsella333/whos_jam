<!doctype html>
<html lang="en">
  {% extends 'header.njk' %}
  {% block content %}
    <head>
      <link rel="stylesheet" href="/index.css" />
    </head>
    <body>
      <div class="container">
        <form id="game_search">
          <div class="card active_game">
            <input id="search" class="form-control form-control-md form-control-borderless" type="search" placeholder="Game PIN" maxlength="4" minlength="4" onkeyup="this.value = this.value.toUpperCase();">
          </div>
          <input id="submit_button" type="submit" value="Join Game" class="btn btn-primary"></input>
        </form>
      <div>
    </body>

    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script src="home.js"></script>
    {% endblock %}
</html>
